<h1>Eat The Burger!</h1>

<h3>Burgers To Eat</h3>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
        {{/unless}}
    {{/each}}
</ul>

<h3>Burgers Already Eaten!</h3>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Create A Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burgerName">Burger Name:</label>
        <input type="text" id="burgerName" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Devour</label>
        <br>
        <input type="radio" name="devour" value="1" checked> Devour!
        <br>
        <input type="radio" name="devour" value="0"> Hungry
    </div>

    <button type="submit">Add A Burger</button>
</form>